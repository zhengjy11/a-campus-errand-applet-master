/* pages/order_detail/order_detail.wxss */

.b_notes {
  width: 100%;
  padding: 10rpx;
  display: flex;
  box-sizing: border-box;
}

.b_text {
  width: 94%;
  height: 200rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: rgb(238, 238, 238);
  margin-left: 3%;
}

.b_text textarea {
  width: 100%;
  height: 130rpx;
  font-size: 28rpx;
  color: #8c9aa8;
  border-spacing: 2rpx;
}
.des {
  padding-left: 40rpx;
  padding-top: 20rpx;
  font-size: 32rpx;
  color: #acacac;
  letter-spacing: 2rpx;
  line-height: 42rpx;
}