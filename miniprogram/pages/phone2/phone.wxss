.flex-style{
    font-size: 20px;
    text-align: center;
    color:black;
  }
  
  input{
    margin: 5px;
    text-align: left;
    font-size: 18px;
  }
  
  .flex-item{
    height: 35px; 
    line-height: 35px;
    text-align: center;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1
  }
  .flex-item.active{
    color:#0091ff;
  }
  .map_box{
    position:absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    border: 10px;
  }
  #navi_map{
    width: 100%;
    height: 100%;
  }
  .text_box{
    position:absolute;
    height: 90px;
    bottom: 0px;
    left: 0px;
    right: 0px;
  }

  .detail_button{
    position:absolute;
    bottom: 30px;
    right: 10px;
    padding: 3px 5px;
    color: #fff;
    background: #0091ff;
    width:50px;
    text-align:center;
    border-radius:5px;
  }
  
  .arrive{
    width: 80px;
    height: 35px;
    margin-top: 0px;
    margin-left: 20px;
  }
  
  .nav{
    display:flex;
    background-color: rgb(232, 233, 231);
    border: 10px;
    display:flex;
    height: 60px;
    border-radius: 10px 10px 0px 0px;
    box-shadow: gray;
  }

.info{
    margin-top: 270px;
    margin-left: 28px;
    margin-right: 30px;
    border-radius: 10px;
    background-color: rgb(232, 233, 231);
